<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/celdaArticuloFavoritoImageView"
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lampara"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaArticuloFavoritoTextViewNombre"
        style="@style/Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Articulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/celdaArticuloFavoritoImageView" />

    <TextView
        android:id="@+id/celdaArticuloFavoritoTextViewPrecio"
        style="@style/Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio articulo"
        app:layout_constraintTop_toBottomOf="@id/celdaArticuloFavoritoTextViewNombre"
        app:layout_constraintStart_toStartOf="@id/celdaArticuloFavoritoTextViewNombre"/>

</androidx.constraintlayout.widget.ConstraintLayout>