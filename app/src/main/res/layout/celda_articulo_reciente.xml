<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/celdaArticuloImageView"
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:scaleType="fitCenter"
        android:src="@drawable/lampara"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/celdaArticuloTextViewNombre"
        style="@style/Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Articulo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/celdaArticuloImageView" />

    <TextView
        android:id="@+id/celdaArticuloTextViewPrecio"
        style="@style/Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio articulo"
        app:layout_constraintTop_toBottomOf="@id/celdaArticuloTextViewNombre"
        app:layout_constraintStart_toStartOf="@id/celdaArticuloTextViewNombre"/>


</androidx.constraintlayout.widget.ConstraintLayout>