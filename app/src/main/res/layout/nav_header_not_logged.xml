<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/navHeaderNotLoggedCardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toStartOf="@id/navHeaderNotLoggedTextView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_24dp" />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/navHeaderNotLoggedTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/ingresa"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/navHeaderNotLoggedCardView"
        app:layout_constraintTop_toTopOf="@id/navHeaderNotLoggedCardView" />

    <TextView
        android:id="@+id/navHeaderNotLoggedTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/ingresa_detalle"
        app:layout_constraintStart_toStartOf="@id/navHeaderNotLoggedTextView1"
        app:layout_constraintTop_toBottomOf="@id/navHeaderNotLoggedTextView1" />

    <Button
        android:id="@+id/navHeaderNotLoggedButtonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/ingresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navHeaderNotLoggedCardView" />


</androidx.constraintlayout.widget.ConstraintLayout>